{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Project",
			"type": "npm",
			"script": "build",
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": "$tsc"
		},
		{
			"label": "Run Tests",
			"type": "npm",
			"script": "test",
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Start Development Server",
			"type": "npm",
			"script": "dev",
			"group": "none",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			},
			"isBackground": true,
			"problemMatcher": {
				"owner": "typescript",
				"pattern": {
					"regexp": "ERROR in (.*):(\\d+):(\\d+)",
					"file": 1,
					"line": 2,
					"column": 3
				},
				"background": {
					"beginsPattern": ".*starting development server.*",
					"endsPattern": ".*Server started on port.*"
				}
			}
		},
		{
			"label": "Run Migrations",
			"type": "npm",
			"script": "migrate",
			"group": "none",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		}
	]
}
